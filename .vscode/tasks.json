{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\*.cpp",
                "-fdiagnostics-color=always",
                "-g",
                // Arquivos necessários para a compilação
                "-I${workspaceFolder}\\Dependencies\\include",
                "${workspaceFolder}\\Dependencies\\src\\glad.c",
                "${workspaceFolder}\\Dependencies\\include\\text\\text.cpp",
                "${workspaceFolder}\\Dependencies\\include\\stb\\stb_image.cpp",
                "${workspaceFolder}\\Dependencies\\bin\\libglfw3.a",
                "-lgdi32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}